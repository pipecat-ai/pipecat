# Daily API credentials
DAILY_API_KEY=your_daily_api_key_here
DAILY_SIP_FROM_NUMBER=+1234567890  # Your Daily SIP phone number

# Public hostname (required for webhooks)
PUBLIC_HOSTNAME=your-ngrok-subdomain.ngrok-free.app

# Speech-to-Text (Azure)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# LLM configuration (OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_LLM_MODEL=gpt-4o-mini

# Text-to-Speech (ElevenLabs)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_MODEL_ID=smallest-ai-v2-lightning  # e.g. v2 lightning model
ELEVENLABS_VOICE_ID=Priya

# Server settings
PORT=8000

# Bot system prompt
BOT_SYSTEM_PROMPT="You are a helpful phone agent."