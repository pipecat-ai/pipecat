# Pipecat AI Backend Environment Configuration
# Copy this file to .env and fill in your values

# ==================== Server Configuration ====================
HOST=0.0.0.0
PORT=8000
DEBUG=True
LOG_LEVEL=INFO

# ==================== AI Rig Configuration ====================
# Local Ollama configuration (should be running on your AI rig)
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=llama3.2
OLLAMA_NUM_THREADS=6
OLLAMA_NUM_GPU=1

# ==================== Cartesia Configuration ====================
# Get your API key from: https://cartesia.ai
CARTESIA_API_KEY=your_cartesia_api_key_here
CARTESIA_TTS_VOICE_ID=a0e99841-438c-4a64-b679-ae501e7d6091
CARTESIA_TTS_MODEL=sonic-3
CARTESIA_STT_MODEL=ink-whisper
CARTESIA_LANGUAGE=en

# ==================== Twilio Configuration ====================
# Get your credentials from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ==================== Authentication ====================
# Generate a secure random key for production!
# You can use: openssl rand -hex 32
SECRET_KEY=change-this-to-a-secure-random-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== Database Configuration ====================
DATABASE_URL=sqlite:///./backend_data.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost/pipecat_db

# ==================== Session Management ====================
SESSION_TIMEOUT_SECONDS=300
MAX_CONCURRENT_SESSIONS=100

# ==================== WebSocket Configuration ====================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_MESSAGE_SIZE=1048576

# ==================== Audio Configuration ====================
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1

# ==================== CORS Configuration ====================
# Comma-separated list of allowed origins
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ==================== Feature Flags ====================
ENABLE_METRICS=True
ENABLE_LOGGING=True
